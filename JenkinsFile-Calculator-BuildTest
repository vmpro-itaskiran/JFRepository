
pipeline {
    agent any
    stages {
         stage("Checkout Stage") {
              steps {
                   git url: 'https://github.com/vmpro-itaskiran/calculator.git'
              }
         }
         stage("Compile Build Stage") {
              steps {
                   sh "./gradlew build"
              }
         }
         stage("Compile Test Stage") {
              steps {
                   sh "./gradlew test"
                 publishHTML (target: [
                        reportDir: '/var/lib/jenkins/workspace',
                        reportFiles: 'index.html',
                        reportName: "JaCoCo Report"
                   ])
              }
         }
    }
}

